package day01;

public class Student {
	String name;
	int kor;
	int eng;
	
	
	// 만약 정의된 생성자(여기선 Student())가 없다면 컴퓨터(컴파일러)가 알아서 생성자를 추가해준다 --> 기본생성자
	
	public Student(String a, int b, int c) {	// 기본생성자, 생성자 정의 구간, 생성자는 메소드와 달리 기능이 정해져 있기 때문에 return타입이 없다 
		// 메모리의 등록시키는 역할이 사라지지는 않음
		// 아래는 추가적으로 동작할 기능을 넣을 수 있음
//		System.out.println("생성자 안에 적은 문장");
		this.name = a;
		this.kor = b;
		this.eng = c;
	}
	
	
	public void show() {
		System.out.println("---학생정보---");
		System.out.println("이름 : " + this.name);
		System.out.println("국어 : " + this.kor);
		System.out.println("영어 : " + this.eng);
	}
}